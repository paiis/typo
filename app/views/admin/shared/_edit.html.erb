<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @article.id %>
  <%= form_tag("/admin/content/merge") do %>
    <h4><%= _("Merge Articles") %></h4>
    <label for="merge_with">Article ID</label>
    <input type="text" name="merge_with"/> <br>
    <input type="hidden" name="id" value=<%= @article.id %> />
    <%= submit_tag 'Merge With Article', {:class => 'btn info'} %>
  <% end %>
<% end %>
